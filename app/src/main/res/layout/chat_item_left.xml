<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="270dp"
    android:layout_height="wrap_content"
    android:paddingVertical="3dp"
    >

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/chat_item_left_image"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:visibility="gone"></de.hdodenhof.circleimageview.CircleImageView>

    <TextView
        android:id="@+id/chat_item_left_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/chat_item_left_image"
        android:background="@drawable/background_left"
        android:paddingHorizontal="10dp"
        android:paddingVertical="2dp"
        android:textColor="#000000"
        android:textSize="20dp"
        ></TextView>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="2dp"
        android:layout_toRightOf="@id/chat_item_left_text"
        android:id="@+id/chat_item_left_seenText"

        ></ImageView>

</RelativeLayout>